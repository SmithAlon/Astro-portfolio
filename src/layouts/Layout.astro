<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio</title>
	</head>
	<body>
		<div class="background-pattern fixed inset-0 z-[1]" role="presentation" aria-hidden="true"></div>
		
		<section class="decoration-layer fixed inset-0 z-[2]" aria-hidden="true">
			<div class="particles" role="presentation">
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[10%] left-[15%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[25%] left-[85%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[45%] left-[75%]"></div>
				<div class="particle fixed w-2 h-2 rounded-full bg-white opacity-40 top-[65%] left-[25%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[85%] left-[45%]"></div>
				<div class="particle fixed w-2 h-2 rounded-full bg-white opacity-40 top-[15%] left-[55%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[35%] left-[95%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[55%] left-[5%]"></div>
				<div class="particle fixed w-2 h-2 rounded-full bg-white opacity-40 top-[75%] left-[65%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[95%] left-[35%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[5%] left-[25%]"></div>
				<div class="particle fixed w-2 h-2 rounded-full bg-white opacity-40 top-[40%] left-[15%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[60%] left-[85%]"></div>
				<div class="particle fixed w-1 h-1 rounded-full bg-white opacity-50 top-[80%] left-[55%]"></div>
				<div class="particle fixed w-2 h-2 rounded-full bg-white opacity-40 top-[20%] left-[45%]"></div>
			</div>
		</section>

		<main class="relative z-[3]">
			<slot />
		</main>
	</body>
</html>

<style>
    /* Base Styles */
    html, body {
        background: #000000;
        min-height: 100vh;
        width: 100%;
        overflow-x: hidden;
    }

    /* Background Pattern Layer */
    .background-pattern {
        background-color: #000000;
        opacity: 0.9;
    }

    .decoration-layer {
        width: 100%;
        height: 100vh;
    }

    /* Particle Animation System */
    .particle {
        animation: twinkle var(--twinkle-duration, 3s) infinite;
        animation-delay: var(--twinkle-delay, 0s);
    }

    /* Particle Animation Variants */
    .particle:nth-child(3n) { --twinkle-duration: 4s; --twinkle-delay: 0.5s; }
    .particle:nth-child(3n+1) { --twinkle-duration: 3.5s; --twinkle-delay: 1s; }
    .particle:nth-child(3n+2) { --twinkle-duration: 3s; --twinkle-delay: 1.5s; }
    .particle:nth-child(2n) { --twinkle-duration: 4.5s; --twinkle-delay: 2s; }
    .particle:nth-child(2n+1) { --twinkle-duration: 5s; --twinkle-delay: 2.5s; }

    /* Animation Keyframes */
    @keyframes twinkle {
        0%, 100% { opacity: 0.1; transform: scale(1); }
        50% { opacity: 0.6; transform: scale(1.5); }
    }

    @keyframes subtle-float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/ScrollTrigger.min.js"></script>