<script>
    import { gsap } from 'gsap';

    const toggleButton = document.getElementById('toggle-contacts');
    const contactsContainer = document.getElementById('contacts-container');
    let isOpen = false;

    if (toggleButton && contactsContainer) {
        toggleButton.addEventListener('click', () => {
            isOpen = !isOpen;
            
            if (isOpen) {
                contactsContainer.classList.remove('hidden');
                gsap.fromTo(contactsContainer, 
                    { opacity: 0, y: 20 },
                    { opacity: 1, y: 0, duration: 0.5, ease: "power2.out" }
                );
                
                gsap.to(toggleButton, {
                    rotateZ: 180,
                    y: -20,
                    duration: 0.5,
                    ease: "power2.out"
                });
            } else {
                gsap.to(contactsContainer, {
                    opacity: 0,
                    y: 20,
                    duration: 0.5,
                    ease: "power2.in",
                    onComplete: () => contactsContainer.classList.add('hidden')
                });
                
                gsap.to(toggleButton, {
                    rotateZ: 180,
                    y: 0,
                    duration: 0.5,
                    ease: "power2.in"
                });
            }
        });

        // Asegurar rotaci√≥n inicial
        gsap.set(toggleButton, { rotateZ: 0 });
    }
</script>

<style>
    #toggle-contacts {
        animation: float 2s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-5px); }
    }
</style>